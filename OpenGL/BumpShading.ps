#version 400 core

out vec4 color;

uniform sampler2D tex_color;
uniform sampler2D tex_normal;

in vec2 texcoord;
in vec3 lightDir;
in vec3 eyeDir;

uniform float shininess = 5.0;
uniform vec3 diffuseColor;
uniform vec3 specularColor;
uniform vec3 ambientColor;

void main(void){
    vec3 V = normalize(eyeDir);
    vec3 L = normalize(lightDir);
    vec3 N = normalize(texture(tex_normal, texcoord).rgb * 2.0 - vec3(1.0));

    float lambertian = max(dot(N, L), 0.0);
    vec3 specular = vec3(0.0, 0.0, 0.0);
    if(0.0 < lambertian){
         vec3 specular_albedo = vec3(1.0);
         vec3 R = reflect(-L, N);
         specular = max(pow(dot(R, V), shininess), 0.0) * specular_albedo;
    }

    vec3 diffuse_albedo = texture(tex_color, texcoord).rgb;
    vec3 diffuse = lambertian * diffuse_albedo;
    color = vec4(diffuse + specular, 1.0);
}
