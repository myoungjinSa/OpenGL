// Filename: color.ps
////////////////////////////////////////////////////////////////////////////////
#version 400

struct FocusInfo{
	vec4 focusingColor;
	int  focusObjNo;
};

uniform int       objNo;
uniform FocusInfo focusInfo;
/////////////////////
// INPUT VARIABLES //
/////////////////////
in vec3 color;


//////////////////////
// OUTPUT VARIABLES //
//////////////////////
out vec4 outputColor;


void main(void)
{
	vec4 finalColor;
	finalColor = (objNo == focusInfo.focusObjNo) ? focusInfo.focusingColor : vec4(color, 1.0f);
	outputColor = finalColor;
}